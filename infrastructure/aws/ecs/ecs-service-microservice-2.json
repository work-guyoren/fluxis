{
  "cluster": "${ECS_CLUSTER_ID}",
  "serviceName": "microservice-2-service",
  "taskDefinition": "${ECR_URL_MICROSERVICE_2}:latest",
  "desiredCount": 1,
  "launchType": "FARGATE",
  "networkConfiguration": {
    "awsvpcConfiguration": {
      "subnets": ["${SUBNETS}"],
      "securityGroups": ["${SECURITY_GROUPS}"],
      "assignPublicIp": "ENABLED"
    }
  },
  "loadBalancers": [
    {
      "targetGroupArn": "${TARGET_GROUP_ARN_MICROSERVICE_2}",
      "containerName": "microservice-2-container",
      "containerPort": 5001
    }
  ]
}
