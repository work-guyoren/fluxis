{
  "cluster": "${ECS_CLUSTER_ID}",
  "serviceName": "microservice-1-service",
  "taskDefinition": "${TASK_DEFINITION}",
  "desiredCount": 1,
  "launchType": "FARGATE",
  "networkConfiguration": {
    "awsvpcConfiguration": {
      "subnets": ["${SUBNETS}"],
      "securityGroups": ["${SECURITY_GROUPS}"],
      "assignPublicIp": "ENABLED"
    }
  },
  "loadBalancers": [
    {
      "targetGroupArn": "${TARGET_GROUP_ARN_MICROSERVICE_1}",
      "containerName": "microservice-1-container",
      "containerPort": 5000
    }
  ]
}
